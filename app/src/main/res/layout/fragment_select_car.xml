<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/ivCarImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/image_not_available" />

    <ProgressBar
        android:id="@+id/pbLoadImage"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/custom_progressbar_color"
        android:layout_height="@dimen/dp_eighty"
        android:layout_width="@dimen/dp_eighty"/>

    <TextView
        android:id="@+id/tvCarModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/metro_yellow"
        android:layout_margin="@dimen/dp_five"
        android:textSize="@dimen/sp_fifteen"/>
</RelativeLayout>