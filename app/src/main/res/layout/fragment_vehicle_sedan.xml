<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hertz.hertz.activities.CVehicleActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp"
                android:background="@color/yellow"
                android:alpha="0.5">

            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/img_car"
                    android:src="@drawable/car2"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_left"
                    android:src="@drawable/arrowleft"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_car"
                    android:layout_toStartOf="@+id/img_car" />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_right"
                    android:src="@drawable/arrowright"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_alignTop="@+id/btn_left"
                    android:layout_toRightOf="@+id/img_car"
                    android:layout_toEndOf="@+id/img_car" />


            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/yellow"
                android:padding="10dp"
                android:alpha="0.3">

            </View>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nissan Sentra (1.3 Manual)"
                android:padding="10dp"
                android:textSize="24dp"
                android:id="@+id/tv_car_name"
                android:textColor="@android:color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@color/yellow"
                android:alpha="0.5">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_sedan"
                    android:padding="15dp"
                    android:textSize="12dp"

                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_desc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <FrameLayout
                            android:background="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/arr_hours"
                            android:id="@+id/spinner"
                            ></Spinner></FrameLayout>

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P 1750"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:id="@+id/hourprice"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:id="@+id/btn_reserve"
                        android:background="@color/yellow"
                        android:layout_gravity="center"
                        android:text="ADD TO MY RESERVATIONS"
                        android:textSize="12dp"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:onClick="onClick"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/yellow"
                android:padding="10dp"
                android:alpha="0.3">

            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/car_note"
                android:padding="10dp"
                android:textSize="12dp"
                android:textColor="@android:color/black"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/yellow"
                android:padding="10dp"
                android:alpha="0.6">

            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <Button
                    android:layout_width="200dp"
                    android:layout_height="26dp"
                    android:id="@+id/btn_continue"
                    android:background="@drawable/btn_continue"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:onClick="onClick"/>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
