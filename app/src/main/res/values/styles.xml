<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>
        &lt;!&ndash; Support library compatibility &ndash;&gt;
        <item name="actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/header</item>
        <!-- Support library compatibility -->

        <item name="android:textColor">#ffffff</item>
        <item name="background">@drawable/header</item>
        <item name="android:backgroundStacked">@drawable/header</item>
        <item name="backgroundStacked">@drawable/header</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
